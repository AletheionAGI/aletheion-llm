# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for source code
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.pxi text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.rst text eol=lf
*.tex text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# CI/CD files
.github/**/* text eol=lf

# Documentation
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary

# Model files
*.pt binary
*.pth binary
*.ckpt binary
*.h5 binary
*.hdf5 binary
*.pkl binary
*.pickle binary
*.joblib binary
*.bin binary
*.safetensors binary
*.onnx binary
*.pb binary
*.tflite binary
*.weights binary

# Python compiled files
*.pyc binary
*.pyo binary
*.pyd binary

# Archive files
*.whl binary
*.egg binary

# Export diff and merge settings for common file types
*.py diff=python
*.md diff=markdown
*.json diff=json
*.yml diff=yaml
*.yaml diff=yaml

# Mark generated files
*.generated.py linguist-generated=true
*.pb.go linguist-generated=true
